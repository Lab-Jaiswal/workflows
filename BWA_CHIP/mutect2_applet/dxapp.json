{
  "name": "mutect2_applet",
  "title": "mutect2_applet",
  "summary": "Run GATK Mutect2, FilterMutectCalls, Funcotator, etc.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
          {
            "name": "number_of_batches",
            "class": "int",
            "default": 0,
            "optional": true,
            "help": ""
           },
           {
            "name": "batch_size",
            "class": "int",
            "default": 0,
            "optional": true,
            "help": ""
           },
           {
            "name": "sample_list",
            "class": "string",
            "default": "",
            "optional": true,
            "help": ""
           },
           {
            "name": "meta_sample_list",
            "class": "boolean",
            "default": "meta_filelist.txt",
            "optional": true,
            "help": ""
           },
           {
            "name": "sample_directory",
            "class": "string",
            "default": "Bulk/Exome sequences/Exome OQFE CRAM files",
            "optional": true,
            "help": ""
           },
           {
            "name": "sample_list_directory",
            "class": "string",
            "default": "sample_lists",
            "optional": true,
            "help": ""
           },
           {
            "name": "references_directory",
            "class": "string",
            "default": "references",
            "optional": true,
            "help": ""
           },
           {
            "name": "input_directory",
            "class": "string",
            "default": "inputs",
            "optional": true,
            "help": ""
           },
           {
            "name": "output_directory",
            "class": "string",
            "default": "outputs",
            "optional": true,
            "help": ""
           },
           {
            "name": "project_id",
            "class": "string",
            "default": "project-G5B07V8JPkg740v9GjfF9PzV",
            "optional": true,
            "help": ""
           },
           {
            "name": "n_jobs",
            "class": "int",
            "default": 1,
            "optional": true,
            "help": ""
           }
           
  ],
  "outputSpec": [
    {
      "name": "outputs_folder",
      "class": "array:file",
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "file": "src/submit_cloud.sh",
    "distribution": "Ubuntu",
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [ "*" ]
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x2"
        }
      }
    }
  }
}
