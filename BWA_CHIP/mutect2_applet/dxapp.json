{
  "name": "mutect2_applet",
  "title": "mutect2_applet",
  "summary": "Run GATK Mutect2, FilterMutectCalls, Funcotator, etc.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
          {
            "name": "number_of_batches",
            "class": "int",
            "default": 0,
            "optional": true,
            "help": ""
           },
           {
            "name": "batch_size",
            "class": "int",
            "default": 0,
            "optional": true,
            "help": ""
           },
           {
            "name": "panel_of_normals",
            "class": "string",
            "default": "false",
            "optional": true,
            "help": ""
           }

  ],
  "outputSpec": [
    {
      "name": "Outputs_folder",
      "class": "array:file",
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 24
      }
    },
    "interpreter": "bash",
    "file": "src/submit_cloud.sh",
    "distribution": "Ubuntu",
    "execDepends":[
      {"name": "bcftools"},
      {"name": "samtools"},
      {"name": "tabix"}
    ],
    "release": "20.04",
    "version": "0"
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [ "*" ]
  },
  "regionalOptions": {
    "aws:eu-west-2": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_v2_x2"
        }
      }
    }
  }
}
